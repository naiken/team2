<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/how_to_play"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity" >
    
      <ImageView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_title" />
      
      <View
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    

    <!-- <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="チキンファームの遊び方"
        android:textAppearance="?android:attr/textAppearanceLarge" /> -->

    <!-- たまごを買おう -->

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_egg" />
    
    <!-- 　えさをあげよう -->

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_buit" />

    <!-- トレーニングさせよう -->

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_traning" />

    <!-- 出荷させよう -->

    <ImageButton
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_forward" />

    <!-- 図鑑をコンプリートさせよう -->

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_guide" />

    <!-- トップに戻る -->

    <ImageButton
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/how_to_back" />

</LinearLayout>